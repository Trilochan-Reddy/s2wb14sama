extends layout
block content
  h1= title
  p search results 
  div(class="container-fluid")
        div(class="row")
            -
                let petshop = [
                    {
                        "Breed": "Horgi",
                        "Quantity": 22,
                        "price": "TEN USD"
                    },
                    {
                        "Breed": "Irish Terrier",
                        "Quantity": 40,
                        "price": "Twenty five USD"
                    },
                    {
                        "Breed": "Jack Chi",
                        "Quantity": 15,
                        "price": "Twenty Two USD"
                    },                   
                ]
            each v,index in petshop
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.Breed}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.Quantity}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.price}
  script.                
        function buy(intemNo)
        {
              alert(`you purchased Item ${intemNo+1}`)
        }